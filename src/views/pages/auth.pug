extends ../layout/default

block content
    .fullpage
        form.form
            p.form__title Войти
            label.field
                +icon('MailOutlineRounded')
                input(placeholder="Введите почту или номер телефона" name="login" type="input")
            label.field.field--password
                +icon('SecurityRounded')
                input(placeholder="Введите пароль" name="password" type="password")
                span.field__password-hide
                    +icon('RemoveRedEyeRounded')
            a(href="#!").form__forgot-password Забыли пароль?
            button(type="submit").btn.btn__join Войти
            button(type="button").btn.btn__create Создать аккаунт
            .socials
                a(href="#").social.social--vk
                    +icon('socVK')
                a(href="#").social.social--ok
                    +icon('socOK')
                a(href="#").social.social--Yandex
                    +icon('socYandex')
                a(href="#").social.social--socMail
                    +icon('socMail')